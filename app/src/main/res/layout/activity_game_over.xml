<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#cc0717"
    tools:context="com.example.edjd.testapplicaton.GameOverActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/sflogo"
            android:layout_gravity="bottom"/>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="You Won!"
            android:id="@+id/gameovertxt"
            android:textSize="70dp"
            android:textAlignment="center"
            android:layout_above="@+id/scoretxt"
            android:layout_alignRight="@+id/imageButton6"
            android:layout_alignEnd="@+id/imageButton6"
            android:layout_marginBottom="37dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Score:"
            android:id="@+id/scoretxt"
            android:layout_marginBottom="127dp"
            android:textSize="40dp"
            android:layout_above="@+id/imageButton5"
            android:layout_toLeftOf="@+id/imageButton6"
            android:layout_toStartOf="@+id/imageButton6"
            android:textColor="#ffffff" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton4"
            android:src="@drawable/rename"
            android:layout_alignTop="@+id/imageButton5"
            android:layout_toRightOf="@+id/imageButton5"
            android:layout_toEndOf="@+id/imageButton5"
            android:onClick="OnClickHockey" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton5"
            android:src="@drawable/sfaddred2"
            android:layout_marginBottom="51dp"
            android:onClick="OnClickSFAd"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/scoretxt"
            android:layout_alignEnd="@+id/scoretxt" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton6"
            android:src="@drawable/warrantylogo2"
            android:onClick="OnClickAutoCare"
            android:nestedScrollingEnabled="false"
            android:layout_marginRight="38dp"
            android:layout_marginEnd="38dp"
            android:layout_alignBottom="@+id/imageButton5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/score"
            android:layout_marginLeft="47dp"
            android:layout_marginStart="47dp"
            android:textSize="40dp"
            android:layout_alignTop="@+id/scoretxt"
            android:layout_toRightOf="@+id/imageButton5"
            android:layout_toEndOf="@+id/imageButton5"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Move up the leaderboard after a short message"
            android:id="@+id/textView2"
            android:textAlignment="center"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:layout_above="@+id/imageButton4"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</RelativeLayout>
